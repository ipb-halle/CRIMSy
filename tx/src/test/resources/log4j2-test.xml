<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

  <Properties>
    <Property name="LOG_DIR">target/logs</Property>
  </Properties>

  <Appenders>

    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n"/>
    </Console>

    <RollingFile
        name="LOGFILE"
        fileName="${LOG_DIR}/tx.log"
        filePattern="${LOG_DIR}/tx.%d{yyyy-MM-dd}.log"
        ignoreExceptions="false">
        <PatternLayout>
            <Pattern>[%-5p] %d{yyyy-MM-dd HH:mm:ss} %c{1} - %m%n</Pattern>
        </PatternLayout>
        <Policies>
            <TimeBasedTriggeringPolicy/>
        </Policies>
        <DefaultRolloverStrategy max="5" />
    </RollingFile>

  </Appenders>

  <Loggers>

    <Logger name="de.ipb_halle" level="info" additivity="false">
      <AppenderRef ref="LOGFILE" level="info"/>
    </Logger>

    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>

  </Loggers>

</Configuration>
